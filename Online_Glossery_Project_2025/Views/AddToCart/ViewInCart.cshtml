@model IEnumerable<Online_Glossery_Project_2025.Models.Product>

<div class="container mt-4">

    <h2 class="mb-4 fw-bold">🛒 My Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-4">
            Your cart is empty.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm border-0">

                        <img src="@Url.Action("DisplayProductImage", "Product", new { id = item.Id })"
                             class="card-img-top"
                             style="height:200px; object-fit:cover;" />

                        <div class="card-body text-center">
                            <h5 class="card-title">@item.ProductName</h5>
                            <p class="fw-semibold fs-5">$@item.Cost</p>

                            <a asp-controller="AddToCart"
                               asp-action="Remove"
                               asp-route-id="@item.Id"
                               class="btn btn-danger btn-sm">
                                Remove
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <a asp-controller="AddToCart" asp-action="Clear" class="btn btn-dark">
                Clear Cart
            </a>
        </div>
    }
</div>
