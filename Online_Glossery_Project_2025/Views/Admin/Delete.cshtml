@model Online_Glossery_Project_2025.Models.MyUser

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Delete User</h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-warning text-center">
                        <strong>Are you sure?</strong><br />
                        This action cannot be undone.
                    </div>

                    <h5 class="mb-3">User Details</h5>
                    <hr />

                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold">Username</dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4 fw-semibold">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 fw-semibold">Password</dt>
                        <dd class="col-sm-8">@Model.Password</dd>

                        <dt class="col-sm-4 fw-semibold">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4 fw-semibold">Active</dt>
                        <dd class="col-sm-8">@Model.IsActive</dd>

                        <dt class="col-sm-4 fw-semibold">Role</dt>
                        <dd class="col-sm-8">@Model.Role</dd>

                        <dt class="col-sm-4 fw-semibold">Is Login</dt>
                        <dd class="col-sm-8">@Model.Islogin</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" class="text-center">
                        <input type="hidden" asp-for="UserId" />

                        <button type="submit" class="btn btn-danger px-4">
                            Delete
                        </button>

                        <a asp-action="GetData" class="btn btn-secondary ms-2 px-4">
                            Cancel
                        </a>
                    </form>

                </div>
            </div>

        </div>
    </div>

</div>
