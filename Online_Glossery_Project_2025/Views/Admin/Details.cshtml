@model Online_Glossery_Project_2025.Models.MyUser

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">User Details</h4>
        </div>

        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 fw-bold">Password</dt>
                <dd class="col-sm-9">@Model.Password</dd>

                <dt class="col-sm-3 fw-bold">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3 fw-bold">Active Status</dt>
                <dd class="col-sm-9">@Model.IsActive</dd>

                <dt class="col-sm-3 fw-bold">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>

                <dt class="col-sm-3 fw-bold">Is Login</dt>
                <dd class="col-sm-9">@Model.Islogin</dd>
            </dl>

        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning me-2">Edit</a>
            <a asp-action="GetData" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
