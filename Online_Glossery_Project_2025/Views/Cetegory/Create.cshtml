@model Online_Glossery_Project_2025.Models.Cetegory

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Create Category</h4>
                </div>

                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Category Name -->
                        <div class="mb-3">
                            <label asp-for="CetegoryName" class="form-label"></label>
                            <input asp-for="CetegoryName" class="form-control" />
                            <span asp-validation-for="CetegoryName" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Create
                            </button>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="GetAllCetegory" class="btn btn-secondary">
                    ← Back to List
                </a>
            </div>

        </div>
    </div>
</div>
