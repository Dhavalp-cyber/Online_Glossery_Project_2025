@model Online_Glossery_Project_2025.Models.Cetegory

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Delete Category</h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-warning text-center">
                        <strong>Are you sure?</strong><br />
                        This action is permanent and cannot be undone.
                    </div>

                    <h5 class="mb-3">Category Details</h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Category Name</dt>
                        <dd class="col-sm-8">@Model.CetegoryName</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" class="text-center">
                        <input type="hidden" asp-for="CetegoryID" />

                        <button type="submit" class="btn btn-danger px-4">
                            Delete
                        </button>

                        <a asp-action="GetAllCetegory" class="btn btn-secondary ms-2 px-4">
                            Cancel
                        </a>
                    </form>

                </div>
            </div>

        </div>
    </div>

</div>
