@model IEnumerable<Online_Glossery_Project_2025.Models.Cetegory>

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Categories</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Category Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CetegoryName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.CetegoryID" class="btn btn-sm btn-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="SubCetegory"
                               asp-action="GetAllSubCetegory"
                               asp-route-id="@item.CetegoryID"
                               class="btn btn-sm btn-info me-1 text-white">
                                <i class="bi bi-card-list"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CetegoryID" class="btn btn-sm btn-danger me-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a asp-controller="SubCetegory"
                               asp-action="CreateNewCetegory"
                               asp-route-id="@item.CetegoryID"
                               class="btn btn-sm btn-success">
                                <i class="bi bi-plus-circle"></i> Add SubCategory
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
