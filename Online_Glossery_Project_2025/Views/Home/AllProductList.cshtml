@model IEnumerable<Online_Glossery_Project_2025.Models.Product>

@{
    ViewData["Title"] = "All Products List";
}

<div class="container mt-4">
    <div class="row gy-4">

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card shadow-sm border-0">

                    @if (item.Image == null || item.Image.Length == 0)
                    {
                        <img src="~/css/images/download.png"
                             class="card-img-top"
                             style="height: 200px; object-fit: cover;"
                             alt="No Image Available" />
                    }
                    else
                    {
                        <img src="@Url.Action("DisplayProductImage", "Product", new { id = item.Id })"
                             class="card-img-top"
                             style="height: 200px; object-fit: cover;"
                             alt="@item.ProductName" />
                    }

                    <div class="card-body text-center">
                        <h5 class="card-title mb-3">@item.ProductName</h5>

                        <div class="d-flex justify-content-center gap-2">
                            <a class="btn btn-primary">
                                $ @item.Cost
                            </a>

                            <a asp-controller="AddToCart"
                               asp-action="Add"
                               asp-route-id="@item.Id"
                               class="btn btn-warning">
                                🛒 Add
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }

    </div>
</div>
