@model IEnumerable<Online_Glossery_Project_2025.Models.Images>

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Images</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Upload New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var img in Model)
                {
                    <tr>
                        <td>@img.Name</td>
                        <td>
                            <img src="@Url.Action("DisplayImage", "Image", new { id = img.Id })"
                                 class="img-thumbnail" style="width:150px; height:150px;" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
