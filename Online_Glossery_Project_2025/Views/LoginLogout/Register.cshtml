@model Online_Glossery_Project_2025.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">Register</h4>
                </div>

                <div class="card-body">

                    <form asp-action="Register" method="post">

                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input type="text" asp-for="Username" class="form-control" placeholder="Enter Username" autocomplete="off" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter Phone" autocomplete="off" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Register</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">← Back</a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>
