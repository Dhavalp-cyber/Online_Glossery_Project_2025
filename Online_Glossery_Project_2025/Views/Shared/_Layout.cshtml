@{
    var isLogin = Context.Request.Cookies["IsLogin"];
    var email = Context.Request.Cookies["Email"];
    var loggedUser = ViewBag.userdata as Online_Glossery_Project_2025.Models.MyUser;

    string cart = Context.Request.Cookies["cart"];
    int count = string.IsNullOrEmpty(cart) ? 0 : cart.Split(',').Length;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_Glossery_Project_2025</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm py-3">
            <div class="container">

                <!-- Brand -->
                <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="AllProductList">
                    Online Glossery
                </a>

                <!-- Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNav">

                    @if (isLogin == "true")
                    {
                        <!-- Left Menu -->
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="AllProductList">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>

                            @if (email == "dhaval@gmail.com")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="GetData">Admin Panel</a>
                                </li>
                            }
                        </ul>
                    }

                    <!-- Right Side -->
                    <ul class="navbar-nav ms-auto align-items-center">

                        @if (isLogin == "true")
                        {
                            <!-- User Email -->
                            <li class="nav-item me-3">
                                <span class="fw-semibold">@email</span>
                            </li>

                            <!-- Profile -->
                            <li class="nav-item me-3">
                                <a asp-controller="Home" asp-action="Profile" class="btn btn-outline-secondary rounded-circle p-2">
                                    <i class="bi bi-person"></i>
                                </a>
                            </li>

                            <!-- Cart -->
                            <li class="nav-item me-3">
                                <a asp-controller="AddToCart" asp-action="ViewInCart" class="btn btn-warning">
                                    <i class="bi bi-cart4"></i> (@count)
                                </a>
                            </li>

                            <!-- Logout -->
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-dark btn-sm" asp-controller="LoginLogout" asp-action="Logout">
                                    Logout
                                </a>
                            </li>

                            <!-- Admin Manage -->
                            @if (email == "dhaval@gmail.com")
                            {
                                <li class="nav-item dropdown">
                                    <a class="btn btn-outline-secondary btn-sm dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                        Manage
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Add Product</a></li>
                                        <li><a class="dropdown-item" asp-controller="Cetegory" asp-action="GetAllCetegory">Manage Category</a></li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- Login/Register -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="LoginLogout" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="LoginLogout" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 mt-5">
        <div class="container text-center">
            © Online Glossery Project
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
