@model Online_Glossery_Project_2025.Models.SubCetegory

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white text-center">
                    <h4 class="mb-0">Add SubCategory</h4>
                </div>

                <div class="card-body">
                    <form asp-action="CreateNewCetegory">
                        <input type="hidden" asp-for="CetegoryID" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- SubCategory Name -->
                        <div class="mb-3">
                            <label asp-for="SubCetegoryName" class="form-label"></label>
                            <input asp-for="SubCetegoryName" class="form-control" />
                            <span asp-validation-for="SubCetegoryName" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-controller="Cetegory" asp-action="GetAllCetegory" class="btn btn-secondary">Back</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
