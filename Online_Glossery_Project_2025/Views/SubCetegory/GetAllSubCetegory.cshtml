@model IEnumerable<Online_Glossery_Project_2025.Models.SubCetegory>

<div class="container mt-5">
    <h2 class="mb-4">SubCategories</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3 text-end">
        <a asp-action="CreateNewCetegory" class="btn btn-success">Add New SubCategory</a>
        <a asp-controller="Cetegory" asp-action="GetAllCetegory" class="btn btn-secondary ms-2">Back to Categories</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>SubCategory Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.SubCetegoryName</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.SubCetegoryID" class="btn btn-primary btn-sm me-1">Edit</a>
                                <a asp-action="Delete" asp-controller="SubCetegory" asp-route-id="@item.SubCetegoryID" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
